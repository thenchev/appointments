<?xml version="1.0"?>
<ruleset name="php-genesis">
    <description>Coding standard used for the PHP Applications.</description>

    <file>./src</file>
    <file>./tests</file>

    <arg name="extensions" value="php" />
    <arg name="standard" value="PSR2" />

    <rule ref="PSR2">
        <exclude-pattern>src/Kernel.php</exclude-pattern>
    </rule>
</ruleset>
